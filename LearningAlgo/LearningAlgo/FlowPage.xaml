            <StackLayout x:Name="Footer"
                         BackgroundColor="#23455622"
                         Orientation="Horizontal"
                         VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand">
                <Button TextColor="#12a7eb"
                        WidthRequest="50"
                        Text="SideP"
                        Clicked="SidePanel"/>
                <Button x:Name="ShowDialog"
                        Text="Show!!"
                        Clicked="ShowDialogClicked"/>
                <Button x:Name="TraceDo"
                        Text="トレースの呼び出しボタン"
                        Clicked="TraceDoCliked"/>
                <Button x:Name="LineConection"
                        Text="OnOFFuuu"
                        Clicked="LineConectionClicked"/>
                <Button x:Name="SaveButton"
                        Text="Save"
                        Clicked="SaveClicked"/>
                
            </StackLayout>

            
            <StackLayout VerticalOptions="FillAndExpand"
                BackgroundColor="#4696e5"
                TranslationX="300"
                WidthRequest="100">
                <ScrollView x:Name="PrisetScroll">  
                    <StackLayout  x:Name="Priset"/>
                </ScrollView>
                    <Label x:Name="ILabel"
                           Text="i:   0"/>
                    <Label x:Name="JLabel"
                           Text="j:   0"/>
                    <Label x:Name="MassageLabel"
                           Text="プリセットを読み込んで下さい"/>
                <ScrollView>
                    <Label x:Name="TraceLabel"
                           Text=""/>
                </ScrollView>
            </StackLayout>
            
            <StackLayout x:Name="SidePane"
                         BackgroundColor="#12a7eb"
                         WidthRequest="100"
                         HeightRequest="100">
                <ScrollView>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Row="0" 
                               Grid.Column="0"
                               x:Name="Sq"
                               Source="SideSikaku.png"
                               BackgroundColor="Fuchsia">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ItemTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Image Grid.Row="1" 
                               Grid.Column="0"
                               x:Name="Hi"
                               Source="SideHiSigata.png"
                               BackgroundColor="Green">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ItemTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Image Grid.Row="2" 
                               Grid.Column="0"
                               x:Name="He"
                               Source="SideDaikeiUe.png"
                               BackgroundColor="Maroon">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ItemTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Image Grid.Row="3" 
                               Grid.Column="0"
                               x:Name="Du"
                               Source="SideDaikeiSita.png">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ItemTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Image Grid.Row="4" 
                               Grid.Column="0"
                               Source="SideHeikou.png">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ItemTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Image Grid.Row="5" 
                               Grid.Column="0"
                               Source="SideHisigata.png">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ItemTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Image Grid.Row="6"
                               Grid.Column="0"
                               Source="SideHisigata.png">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ItemTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                        <Image Grid.Row="7" 
                               Grid.Column="0"
                               x:Name="Dd"
                               Source="SideHisigata.png">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ItemTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                </ScrollView>
            </StackLayout>
            <BoxView x:Name="Shadow"
                     BackgroundColor="Gray">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ShadowTapped"/>
                </BoxView.GestureRecognizers>
            </BoxView>
            <local:KeyboardDialog x:Name="Dialog" BackgroundColor="Black"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
