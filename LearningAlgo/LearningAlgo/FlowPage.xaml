             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LearningAlgo;assembly:LearningAlgo"
             x:Class="LearningAlgo.FlowPage">
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="#e5f0ff"
                        x:Name="MainLayout">
            
